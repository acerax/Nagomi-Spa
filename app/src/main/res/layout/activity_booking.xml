<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/spa_background"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/bookingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking Details"
        android:textSize="26sp"
        android:textColor="#4E342E"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/serviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signature Massage"
        android:textSize="20sp"
        android:textColor="#3E2723"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/bookingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today 3:00 PM"
        android:textSize="16sp"
        android:textColor="#4E342E"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/joinWaitlistBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join Waitlist"
        android:textColor="#FFFFFF"
        android:backgroundTint="#8D6E63" />

</LinearLayout>
