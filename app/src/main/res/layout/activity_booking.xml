<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/spa_background"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/bookingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Booking Details"
        android:textColor="#F6F4F4"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/serviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Signature Massage"
        android:textColor="#F6F4F4"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/bookingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Today 3:00 PM"
        android:textColor="#F6F4F4"
        android:textSize="16sp" />

    <Button
        android:id="@+id/joinWaitlistBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join Waitlist"
        android:textColor="#FFFFFF"
        android:backgroundTint="#8D6E63" />

</LinearLayout>
